{
    "sections": {
      "main-product": {
        "type": "main-product",
        "blocks": {
          "vendor": {
            "type": "text",
            "settings": {
              "text": "{{ product.vendor }}",
              "text_style": "uppercase"
            }
          },
          "title": {
            "type": "title"
          },
          "price": {
            "type": "price"
          },
          "variant_picker": {
            "type": "variant_picker",
            "settings": {
              "picker_type": "button"
            }
          },
          "quantity_selector": {
            "type": "quantity_selector"
          },
          "description": {
            "type": "description"
          }
        },
        "block_order": [
          "vendor",
          "title",
          "price",
          "variant_picker",
          "quantity_selector",
          "description"
        ],
        "settings": {
          "enable_sticky_info": true,
          "gallery_layout": "stacked",
          "media_size": "large",
          "mobile_thumbnails": "hide",
          "hide_variants": true,
          "enable_video_looping": false,
          "padding_top": 36,
          "padding_bottom": 12
        }
      }
    },
    "order": [
      "main-product"
    ]
}