{%- if settings.header_position == 'left' -%}
  {{ 'header-vertical.css' | asset_url | stylesheet_tag }}
{%- else -%}
  {{ 'header.css' | asset_url | stylesheet_tag }}
{%- endif -%}

    <header class="header">
      {% for block in section.blocks %}  
        {% case block.type %}
    
          {% when 'logo' %} 
            <div class="logo-container" {{ block.shopify_attributes }}>
              {% render 'logo' %}
            </div> 
      
          {% when 'navigation' %}
            <nav {{ block.shopify_attributes }}>
              <ul class="header__menu">
                  <li>Home</li>
                  <li>Catalog</li>
                  <li>Contact</li>
              </ul>
            </nav>

          {% when 'cart' %}
            <div class="cart">Cart</div>
        {% endcase %} 
      {% endfor %}
      {% comment %}
        {% render 'logo' %}
        {%- if settings.header_position == 'top' and section.settings.logo_position == 'right' -%}
          {% style %}
            .logo-container {
              order: 1;
            }
          {% endstyle %}
        {%- endif -%}
        {%- if settings.header_position == 'left' and section.settings.logo_position == 'right' -%}
          {% style %}
				body .logo-container {
				position: sticky;
				height: 100vh;
				top: 0;
				right: 0;
				padding: 10px;
				background-color: grey;
				writing-mode: tb-lr;
				}
          	{% endstyle %}
		    {%- endif -%}
      {% endcomment %}
        <nav>
            <ul class="header__menu">
                <li>Home</li>
                <li>Catalog</li>
                <li>Contact</li>
            </ul>
        </nav>
        <div class="cart">Cart</div>
    </header>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "settings": [
    {
      "type": "select",
      "id": "logo_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.header.settings.logo_position.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.header.settings.logo_position.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.header.settings.logo_position.label",
      "info": "t:sections.header.settings.logo_position.info"
    }
  ]
}
{% endschema %}