{%- if settings.header_position == 'left' -%}
  {{ 'header-vertical.css' | asset_url | stylesheet_tag }}
{%- else -%}
  {{ 'header.css' | asset_url | stylesheet_tag }}
{%- endif -%}

    <header class="header">
      {% for block in section.blocks %}  
        {% case block.type %}
    
          {% when 'logo' %} 
            <div class="logo-container" {{ block.shopify_attributes }}>
              {% render 'logo' %}
              {%- if settings.header_position == 'top' and section.settings.logo_position == 'right' -%}
                {% style %}
                  .logo-container {
                    order: 1; 
                  }
                {% endstyle %}
              {%- endif -%}
              {%- if settings.header_position == 'left' and settings.logo_position == 'outside_header' -%}
                {% style %}
                  .logo-container {
                    display: none;
                  }
                {% endstyle %}
              {%- endif -%}
            </div> 
      
          {% when 'navigation' %}
            <nav {{ block.shopify_attributes }}>
              <ul class="header__menu">
                  <li>Home</li>
                  <li>Catalog</li>
                  <li>Contact</li>
              </ul>
            </nav>

          {% when 'cart' %}
            <div class="cart">Cart</div>
        {% endcase %} 
      {% endfor %}
        {% comment %}
        {% render 'logo' %}
        {%- if settings.header_position == 'top' and section.settings.logo_position == 'right' -%}
          {% style %}
            .logo-container {
              order: 1; 
            }
          {% endstyle %}
        {%- endif -%}
        {%- if settings.header_position == 'left' and section.settings.logo_position == 'right' -%}
          {% style %}
            .logo-container {
              position: sticky;
              height: 100vh;
              top: 0;
              right: 0;
              padding: 10px;
              background-color: grey;
              writing-mode: tb-lr;
            }
          {% endstyle %}
		    {%- endif -%}
        <nav>
            <ul class="header__menu">
                <li>Home</li>
                <li>Catalog</li>
                <li>Contact</li>
            </ul>
        </nav>
        <div class="cart">Cart</div>
        {% endcomment %}
    </header>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "settings": [
    {
      "type": "select",
      "id": "logo_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.header.settings.logo_position.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.header.settings.logo_position.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.header.settings.logo_position.label",
      "info": "t:sections.header.settings.logo_position.info"
    },
    {
      "type": "select",
      "id": "header_type",
      "options": [
        {
          "value": "horizontal",
          "label": "t:sections.header.settings.header_position.options__1.label"
        },
        {
          "value": "vertical_top",
          "label": "t:sections.header.settings.header_position.options__2.label"
        },
        {
          "value": "vertical_stretched",
          "label": "t:sections.header.settings.header_position.options__3.label"
        },
        {
          "value": "vertical_right_top_logo",
          "label": "t:sections.header.settings.header_position.options__4.label"
        },
        {
          "value": "vertical_right_middle_logo",
          "label": "t:sections.header.settings.header_position.options__5.label"
        }
      ],
      "default": "top",
      "label": "t:sections.header.settings.header_position.label",
      "info": "t:sections.header.settings.header_position.info"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "id": "logourl",
          "type": "url",
          "label": "Logo url"
        },
        {
          "id": "logotext",
          "type": "text",
          "label": "Logo text"
        }
      ]
    },
    {
      "type": "navigation",
      "name": "Navigation menu",
      "settings": [
        {
          "id": "navigation",
          "type": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "cart",
      "name": "Cart",
      "settings": [
        {
          "id": "cart",
          "type": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}